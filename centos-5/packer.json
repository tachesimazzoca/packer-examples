{
  "variables": {
    "netinstall_iso_url": "isos/CentOS-6.9-x86_64-minimal.iso",
    "guest_additions_mode": "upload",
    "disk_size": "40960"
  },

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "script": "scripts/vboxadd.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "script": "scripts/cleanup.sh"
    }
  ],

  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": ["{{user `netinstall_iso_url`}}"],
      "iso_checksum_type": "sha256",
      "iso_checksum": "9729c04a8a3ba57ed4e34ee5b96522879e6a3bcbf5582c3b6bcfd02bcfbacf8c",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "14400s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "guest_additions_mode": "{{user `guest_additions_mode`}}",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-centos-5.11-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],

  "post-processors": [
    {
      "output": "builds/{{ .Provider }}-packer-centos-5.11-x86_64.box",
      "type": "vagrant"
    }
  ]
}
